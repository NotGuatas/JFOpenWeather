<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JFOpenWeather.MainPage">
    <StackLayout Padding="20">
        <Entry x:Name="CityEntry" Placeholder="Ingrese la ciudad" />
        <Button Text="Obtener Clima" Clicked="ObtenerClima" />
        <Label x:Name="TemperatureLabel" FontSize="24" />
        <Label x:Name="MinMaxTempLabel" FontSize="18" />
        <Label x:Name="DescriptionLabel" FontSize="18" />
        <Label x:Name="WindLabel" FontSize="18" />
        <Label x:Name="PressureLabel" FontSize="18" />
        <Label x:Name="SunriseSunsetLabel" FontSize="18" />
    </StackLayout>

</ContentPage>
